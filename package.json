{
  "name": "@severo_bo/pesticides_website",
  "version": "0.25.1",
  "description": "Data visualization on pesticides in drinking water in Brazil",
  "directories": {
    "lib": "docs"
  },
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "run-s lint:test build:css build:js:dev build:html",
    "build:prod": "run-s lint:test build:css build:js:prod build:html",
    "build:css": "run-s build:css:sass build:css:postcss",
    "build:css:sass": "node-sass src/_sass/main.scss docs/css/main.css",
    "build:css:postcss": "postcss --use autoprefixer --output docs/css/main.css docs/css/main.css",
    "build:html": "run-s build:html:mustache build:html:version",
    "build:html:mustache": "npm run build:html:mustache:pt",
    "build:html:mustache:pt": "mustache src/lang/pt.json src/index.mustache.html docs/index.html",
    "build:html:version": "replace-in-file \"/VERSION_PLACEHOLDER/g\" $(date \"+%s\") docs/index.html --isRegex",
    "build:js:dev": "run-s build:js:rollup:dev build:js:mustache",
    "build:js:prod": "run-s build:js:rollup:prod build:js:mustache",
    "build:js:mustache": "npm run build:js:mustache:pt",
    "build:js:mustache:pt": "mustache src/lang/pt.json docs/lib/main.mustache.js docs/lib/main.pt.js",
    "build:js:rollup:dev": "rollup --config rollup.config.dev.js",
    "build:js:rollup:prod": "rollup --config rollup.config.prod.js",
    "build-and-watch": "run-s build:dev watch",
    "lint:fix": "run-s lint:fix:src lint:fix:other",
    "lint:fix:other": "prettier --write \"**/*.{html,json,md,yaml,yml}\"",
    "lint:fix:src": "run-s lint:fix:src:*",
    "lint:fix:src:css": "prettier --write \"src/**/*.scss\"",
    "lint:fix:src:js": "npm run lint:test:src:js --fix",
    "lint:fix:src:lang": "prettier --write \"src/lang/*.json\"",
    "lint:test": "run-s lint:test:src lint:test:other",
    "lint:test:other": "prettier --list-different \"**/*.{html,json,md,yaml,yml}\"",
    "lint:test:src": "run-s lint:test:src:*",
    "lint:test:src:css": "prettier --list-different \"src/**/*.scss\"",
    "lint:test:src:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore \"src/**/*.js\"",
    "lint:test:src:lang": "prettier --list-different \"src/lang/*.json\"",
    "release": "standard-version",
    "serve": "browser-sync start -c bs-config.js",
    "test": "npm run lint:test",
    "watch": "run-p watch:css watch:js watch:html watch:lang",
    "watch:css": "onchange \"src/_sass\" -- npm run build:css",
    "watch:js": "onchange \"src/_javascript\" -- npm run build:js:dev",
    "watch:html": "onchange \"src/index.mustache.html\" -- npm run build:html",
    "watch:lang": "onchange \"src/lang\" -- run-s build:js:dev build:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/severo/pesticides_website.git"
  },
  "author": "Sylvain Lesage <severo@rednegra.net>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/severo/pesticides_website/issues"
  },
  "homepage": "https://github.com/severo/pesticides_website#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "autoprefixer": "^9.5.0",
    "browser-sync": "^2.26.3",
    "bulma": "^0.7.4",
    "d3": "^5.9.2",
    "d3-fetch": "^1.1.2",
    "d3-geo-projection": "^2.6.0",
    "d3-svg-annotation": "^2.3.1",
    "eslint": "^5.15.2",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lodash-es": "^4.17.11",
    "mustache": "^3.0.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.16.4",
    "replace-in-file": "^3.4.4",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-babel-minify": "^8.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "standard-version": "^5.0.2",
    "tinyqueue": "^2.0.0",
    "topojson": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
